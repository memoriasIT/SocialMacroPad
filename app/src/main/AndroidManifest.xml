<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialmacropad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialMacroPad">
        <activity android:name="com.example.socialmacropad.activities.EditGroupActivity" />
        <activity android:name="com.example.socialmacropad.activities.AddNewGroupActivity" />
        <activity android:name="com.example.socialmacropad.activities.LogInActivity" />
        <activity android:name="com.example.socialmacropad.activities.SignUpActivity" />
        <activity
            android:name="com.example.socialmacropad.activities.ListaDeActividades"
            android:label="@string/title_activity_lista_de_actividades" />
        <activity android:name="com.example.socialmacropad.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.socialmacropad.activities.DeviceListActivity"
            android:label="@string/text_select_paired_device"
            android:resizeableActivity="false"
            android:supportsPictureInPicture="false"
            android:theme="@android:style/Theme.DeviceDefault.Dialog" />
    </application>

</manifest>